<table class="ui table">
  <thead>
    <tr>
      <th>Date Time</th>
      <th>Code</th>
      <th>Temperature (degC)</th>
      <th>Wind Speed (km/h)</th>
      <th>Wind Direction</th>
      <th>Pressure (hPa)</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{date}}
        </td>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{windDirection}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
